{
  "name": "wryter",
  "version": "0.0.1",
  "description": "Get a random writing prompt every day.",
  "main": "index.js",
  "engines" : { 
    "node" : "14.15.x" 
  },
  "scripts": {
    "clean": "rm -rf ./frontend/node_modules && rm -rf ./backend/node_modules/ && npm run install",
    "build": "echo 'test232123' && ls -l ./frontend/node_modules && ls -l ./frontend/node_modules/.bin && cd ./frontend && ./node_modules/.bin/vue-cli-service build",
    "install": "yarn --cwd ./frontend install && yarn --cwd ./backend install",
    "start": "npm run start:production --prefix backend",
    "start:dev": "npm run start:backend & npm run start:frontend",
    "start:frontend": "npm run serve --prefix frontend",
    "start:backend": "npm run start --prefix backend",
    "start:backend:test": "npm run start:test --prefix backend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "trap 'kill %1; echo killed' ERR EXIT; npm run start:backend:test & npm run test --prefix frontend",
    "test:backend": "npm run test --prefix backend",
    "heroku-postbuild": "yarn --cwd ./frontend install && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davideugenepratt/wryter.git"
  },
  "author": "David Eugene Pratt & Cassidy Tillemans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davideugenepratt/wryter/issues"
  },
  "homepage": "https://github.com/davideugenepratt/wryter#readme",
  "dependencies": {
    "@vue/cli": "^4.3.1",
    "nodemon": "^2.0.3"
  }
}
